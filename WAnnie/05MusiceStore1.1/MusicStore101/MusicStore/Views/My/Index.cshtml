@model MusicStoreEntity.MyAddressee
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}

<h2>收货地址</h2>

@using (Html.BeginForm())
{
    <fieldset>
        <legend>收货地址</legend>
        <div class="editor-label">
            @Html.LabelFor(x=>x.AddressPerson)
            @Html.TextBoxFor(x => x.AddressPerson)
            @Html.ValidationMessageFor(x=>x.AddressPerson)
        </div>

        <div class="editor-field">
            @Html.LabelFor(x=>x.Address)
            @Html.TextBoxFor(x=>x.Address)
            @Html.ValidationMessageFor(x=>x.Address)
        </div>
        
        <div class="editor-field">
            @Html.LabelFor(x => x.MobilNumber)
            @Html.TextBoxFor(x => x.MobilNumber)
            @Html.ValidationMessageFor(x=>x.MobilNumber)
        </div>
        
        <div class="editor-field">
            @Html.LabelFor(x => x.Email)
            @Html.TextBoxFor(x => x.Email)
            @Html.ValidationMessageFor(x=>x.Email)
        </div>
        
        <p>
           
            <input type="submit" value="保存" class="btn btn-warning" style="width: 80px"/>
        </p>
    </fieldset>
}

